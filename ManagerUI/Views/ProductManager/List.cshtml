@using BowntDAL
@model List<tb_Prodect>
@{
    ViewBag.Title = "ProductList";
}

@section head{
    <script src="~/Scripts/pages/wbotn-helper.js"></script>
}

<div class="place">
    <span>位置：</span>
    <ul class="placeul">
        <li>
            <a href="#">产品列表</a>
        </li>
    </ul>
</div>
<form action="@Url.Action("Edit")" method="post" enctype="multipart/form-data">
    <div class="rightinfo">
        <div class="tools">
            <ul class="toolbar">
                <li class="click">
                    <a href="@Url.Action("Add")">
                        <span><img src="/images/t01.png" /></span>添加
                    </a>
                </li>
            </ul>
        </div>
        <table class="tablelist">
            <thead>
                <tr>
                    <th>预览图</th>
                    <th>文件名</th>
                    <th>规格名称</th>
                    <th>图片</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img class="bowntImg" src="@item.Icon" />
                        </td>
                        <td>@item.Title</td>
                        <td>@item.tb_Norms.Name</td>
                        <td>
                            <img class="bowntImg" src="@item.Conver" />
                        </td>
                        <td>
                            <a href="@Url.Action("SetTop",new { item.Id})">[置顶]</a>
                            <a href="@Url.Action("Edit", new { item.Id })" class="tablelink">[编辑]</a>
                            <a href="javascript:Delete(@item.Id,'@Url.Action("Delete")')" class="tablelink">[删除]</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>