@using BowntDAL;
@model tb_Prodect
@{
    ViewBag.Title = "ProductDetial";
}

@section style{
    <link href="~/Content/Plugins/jquery-powerful-album-view/dist/viewer.min.css" rel="stylesheet" />
}

@section script{
    <script src="~/Content/Plugins/jquery-powerful-album-view/dist/viewer.min.js"></script>
    <script>
        $(function () {
            $("#imglist").viewer();
        });
    </script>
}
<div style="height:500px;">
    <div id="imglist" class="bowntTableContainer" style="width:90%;text-align:left;margin:20px auto 0;color:#e9e9e9">
        <h3>@Model.Title</h3>
        <div class="row">
            <div class="col-xs-8">
                <div style="height:464px;overflow-y:auto">
                    @Html.Raw(Model.Content)
                </div>
            </div>
            <div class="col-xs-4" style="display:table;height:400px">
                <div style="display:table-cell;vertical-align:middle">
                    <img style="width:100%;" src="@Model.Conver" />
                </div>
            </div>
        </div>
        <div style="height:30px"></div>
    </div>
</div>
